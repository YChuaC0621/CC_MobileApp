<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_item_stockDetail"
        android:layout_width="364dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/listview_bckgrd_stockdetail" />

    <TextView
        android:id="@+id/stockDetail_prodBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Product Barcode"
        app:layout_constraintStart_toStartOf="@+id/list_item_stockDetail"
        app:layout_constraintTop_toTopOf="@+id/list_item_stockDetail" />

    <TextView
        android:id="@+id/stockDetail_rackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Rack Id"
        app:layout_constraintStart_toStartOf="@+id/txt_rackId"
        app:layout_constraintTop_toBottomOf="@+id/txt_rackId" />

    <TextView
        android:id="@+id/stockDetail_rowNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="1dp"
        android:text="Row Num"
        app:layout_constraintStart_toStartOf="@+id/list_item_stockDetail"
        app:layout_constraintTop_toBottomOf="@+id/txt_rowNum" />

    <TextView
        android:id="@+id/stockDetail_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Qty"
        app:layout_constraintStart_toStartOf="@+id/txt_quantity"
        app:layout_constraintTop_toBottomOf="@+id/txt_quantity" />

    <TextView
        android:id="@+id/stockDetail_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Total"
        app:layout_constraintStart_toStartOf="@+id/txt_totalPrice"
        app:layout_constraintTop_toBottomOf="@+id/txt_totalPrice" />

    <TextView
        android:id="@+id/txt_rackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Rack ID"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/stockDetail_prodBarcode"
        app:layout_constraintTop_toBottomOf="@+id/stockDetail_prodBarcode" />

    <TextView
        android:id="@+id/txt_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="8dp"
        android:text="Quantity"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/txt_rackId"
        app:layout_constraintTop_toBottomOf="@+id/stockDetail_prodBarcode" />

    <TextView
        android:id="@+id/txt_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total Price"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/stockDetail_qty"
        app:layout_constraintTop_toBottomOf="@+id/stockDetail_qty" />

    <TextView
        android:id="@+id/txt_rowNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Row No"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/stockDetail_rackId"
        app:layout_constraintTop_toBottomOf="@+id/stockDetail_rackId" />

    <ImageButton
        android:id="@+id/btn_edit_stockDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="@+id/list_item_stockDetail"
        app:layout_constraintTop_toTopOf="@+id/list_item_stockDetail"
        app:srcCompat="@drawable/ic_edit_stockdetail_icon" />

    <ImageButton
        android:id="@+id/btn_delete_stockDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/list_item_stockDetail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>