<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_item_stockDetail"
        android:layout_width="364dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/listview_bckgrd_stockdetail" />

    <TextView
        android:id="@+id/stockOutDetail_prodBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Product Barcode"
        app:layout_constraintStart_toStartOf="@+id/list_item_stockDetail"
        app:layout_constraintTop_toTopOf="@+id/list_item_stockDetail" />

    <TextView
        android:id="@+id/stockOutDetail_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Qty"
        app:layout_constraintStart_toStartOf="@+id/txt_quantityOut"
        app:layout_constraintTop_toBottomOf="@+id/txt_quantityOut" />

    <TextView
        android:id="@+id/stockOutDetail_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Total"
        app:layout_constraintStart_toStartOf="@+id/txt_totalPriceOut"
        app:layout_constraintTop_toBottomOf="@+id/txt_totalPriceOut" />

    <TextView
        android:id="@+id/txt_quantityOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="Quantity"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/stockOutDetail_prodBarcode"
        app:layout_constraintTop_toBottomOf="@+id/stockOutDetail_prodBarcode" />

    <TextView
        android:id="@+id/txt_totalPriceOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Total Price"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/stockOutDetail_qty"
        app:layout_constraintTop_toBottomOf="@+id/stockOutDetail_qty" />

    <ImageButton
        android:id="@+id/btn_edit_stockOutDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="@+id/list_item_stockDetail"
        app:layout_constraintTop_toTopOf="@+id/list_item_stockDetail"
        app:srcCompat="@drawable/ic_edit_stockdetail_icon" />

    <ImageButton
        android:id="@+id/btn_delete_stockOutDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/list_item_stockDetail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_edit_stockOutDetail"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit_stockOutDetail"
        app:srcCompat="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>