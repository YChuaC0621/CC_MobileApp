    </style>

    <!-- homepage button style-->
    <style name="homepage_btn" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/homepg_btnWidth</item>
        <item name="android:layout_height">@dimen/homepg_btnHeight</item>
        <item name="android:buttonCornerRadius">@dimen/homepg_btnRadius</item>
